<% layout('/layouts/boilerplate.ejs')%>

<body>
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <h3 class="text-center mb-4"><%= listing.title %></h3>
                <div class="card shadow-sm mb-4">
                    <img src="<%= listing.image.url %>" alt="listing image" class="img-fluid w-100" style="max-height:400px; object-fit:cover;" />
                    <div class="card-body">
                        <!-- <h1 class="card-title h4 mb-3 text-center"><%= listing.title %></h1> -->
                        <p class="card-text"><%= listing.description %></p>
                        <p class="mb-1"><b>Location:</b> <%= listing.location %>, <%= listing.country %></p>
                        <p class="mb-0"><b>Price:</b> &#8377; <%= listing.price.toLocaleString("en-IN") %></p>
                    </div>
                </div>
                <div class="d-flex justify-content-center gap-3 mb-4">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>
                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button class="btn btn-dark">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Review Section -->
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Leave a Review</h4>
                        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                            <div class="mb-3">
                                <label for="rating" class="form-label"><b>Rating</b></label>
                                <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
                            </div>
                            <div class="mb-3">
                                <label for="comment" class="form-label"><b>Comments</b></label>
                                <textarea name="review[comment]" id="comment" class="form-control" rows="3" placeholder="Share your thoughts..." required></textarea>
                                <div class="invalid-feedback">
                                    Please enter a comment before submitting.
                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-dark">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- All Reviews Section -->
        <% if(listing.reviews && listing.reviews.length > 0) { %>
        <div class="row justify-content-center mt-5">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <h3 class="mb-4">All Reviews</h3>
                <div class="row g-3">
                    <% for(let review of listing.reviews){ %>
                    <div class="col-12">
                        <div class="card shadow-sm border-start border-4 border-primary m-1 p-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h5 class="card-title mb-0">Jane Doe</h5>
                                    <span class="badge bg-dark rounded-pill">
                                        <%= review.rating %> â˜…
                                    </span>
                                </div>
                                <p class="card-text text-muted mb-0"><%= review.comment %></p>
                            </div>
                            <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="post">
                                <button class="btn btn-dark btn-sm mt-2">Delete</button>
                            </form>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</body>